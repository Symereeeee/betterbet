// prisma/schema.prisma

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id     Int     @id @default(autoincrement())
  email  String  @unique
  wallet Wallet?
  bets   Bet[]
}

model Wallet {
  id      Int  @id @default(autoincrement())
  balance Int  @default(1000)
  user    User @relation(fields: [userId], references: [id])
  userId  Int  @unique // ðŸ‘ˆ 1-to-1, matches User.id type
}

model Bet {
  id        Int        @id @default(autoincrement())
  user      User       @relation(fields: [userId], references: [id])
  userId    Int
  amount    Int
  guess     BetGuess
  result    Int
  outcome   BetOutcome
  createdAt DateTime   @default(now())
}

enum BetGuess {
  HIGH
  LOW
}

enum BetOutcome {
  WIN
  LOSE
}
